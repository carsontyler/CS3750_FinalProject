<Window x:Class="CS3750_FinalProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CS3750_FinalProject"
        mc:Ignorable="d"
        Title="Inversion Tracker"
        WindowState="Maximized"
        ResizeMode="CanResize"
        MouseWheel="HandleMouseWheel"
        >

    <Window.Resources>

        <Style x:Key="CellRightAlign">
            <Setter Property="TextBlock.TextAlignment" Value="Right"/>
        </Style>
        <Style x:Key="CellCenterAlign">
            <Setter Property="TextBlock.TextAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CellLeftAlign">
            <Setter Property="TextBlock.TextAlignment" Value="Left"/>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainWindowGrid" MouseWheel="HandleMouseWheel">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="63*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="25"/>
            <RowDefinition Height="481*"/>
        </Grid.RowDefinitions>

        <Menu x:Name="menuBar" 
              Margin="0"
              Grid.Row="0"
              Grid.Column="0"
              Height="25"
              VerticalAlignment="top"
              IsMainMenu="True" Grid.ColumnSpan="2">
            <MenuItem Header="File"
                      FontSize="12"
                      Margin="0"
                      Width="40"
                      HorizontalAlignment="Center"
                      Height="25">
                <MenuItem Header="Open"
                          Margin="0"
                          FontSize="12"
                          Click="Open_File">
                    <MenuItem.Icon>
                        <Image Source="Images/Icons/Open.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Save"
                          Margin="0"
                          FontSize="12">
                    <MenuItem.Icon>
                        <Image Source="Images/Icons/Save.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Export"
                          Padding="0,3,0,5"
                          FontSize="12"
                          BorderBrush="LightGray"
                          BorderThickness="0,0,0,2"
                          Click="Export">
                    <MenuItem.Icon>
                        <Image Source="Images/Icons/Export.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="Print"
                          Margin="0"
                          FontSize="12"
                          Padding="0,3,0,5"
                          BorderBrush="LightGray"
                          BorderThickness="0,0,0,2">
                </MenuItem>
                <MenuItem Header="Quit"
                          FontSize="12"
                          Margin="0"
                          Padding="0,3,0,5">
                    <MenuItem.Icon>
                        <Image Source="Images/Icons/Exit.png"></Image>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>
            <MenuItem Header="Edit"
                      FontSize="12"
                      Margin="0"
                      Width="40"
                      Height="25" />
            <MenuItem Header="Tools"
                      FontSize="12"
                      Margin="0"
                      Width="40"
                      Height="25" />
            <MenuItem Header="Help"
                      FontSize="12"
                      Margin="0"
                      Width="40"
                      HorizontalAlignment="Left"
                      Height="25" />
        </Menu>

        <ScrollViewer x:Name="MainScroller" VerticalScrollBarVisibility="Auto" Grid.Column="0" Grid.Row="1" MouseWheel="HandleMouseWheel" Grid.ColumnSpan="2">
            <StackPanel x:Name="DataContainer"
                        Grid.Row="1"
                        Grid.Column="0"
                        MouseWheel="HandleMouseWheel">
                <DataGrid x:Name="DataGridCollege"
                          AlternatingRowBackground="LightGray"
                          AlternationCount="1"
                          IsReadOnly="True"
                          Visibility="Visible"
                          RowDetailsVisibilityMode="Collapsed"
                          AutoGenerateColumns="False"
                          MouseWheel="HandleMouseWheel">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button Click="ExpandRow">+</Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn Header="College"
                                            Binding="{Binding CollegeName}"
                                            CellStyle="{StaticResource CellLeftAlign}" />
                        <DataGridTextColumn Header="Amount To Fix"
                                            Binding="{Binding AmountToFix, StringFormat={}{0:C}}"
                                            CellStyle="{StaticResource CellRightAlign}" />
                        <DataGridTextColumn Header="Assistant &lt; Instructor"
                                            Binding="{Binding AssistantLessThanInstructor}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                        <DataGridTextColumn Header="Associate &lt; Instructor"
                                            Binding="{Binding AssociateLessThanInstructor}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                        <DataGridTextColumn Header="Associate &lt; Assistant"
                                            Binding="{Binding AssociateLessThanAssistant}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                        <DataGridTextColumn Header="Full &lt; Instructor"
                                            Binding="{Binding FullLessThanInstructor}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                        <DataGridTextColumn Header="Full &lt; Assistant"
                                            Binding="{Binding FullLessThanAssistant}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                        <DataGridTextColumn Header="Full &lt; Associate"
                                            Binding="{Binding FullLessThanAssociate}"
                                            CellStyle="{StaticResource CellCenterAlign}" />
                    </DataGrid.Columns>
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <DataGrid x:Name="DataGridDepartment"
                                      ItemsSource="{Binding Departments}"
                                      AlternatingRowBackground="LightGray"
                                      AlternationCount="1"
                                      IsReadOnly="True"
                                      Visibility="Visible"
                                      Margin="20,2,0,0"
                                      RowDetailsVisibilityMode="Collapsed"
                                      AutoGenerateColumns="False"
                                      MouseWheel="HandleMouseWheel">
                                <DataGrid.Columns>
                                    <DataGridTemplateColumn>
                                        <DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="ExpandRow">+</Button>
                                            </DataTemplate>
                                        </DataGridTemplateColumn.CellTemplate>
                                    </DataGridTemplateColumn>
                                    <DataGridTextColumn Header="Department"
                                                        Binding="{Binding DepartmentName, StringFormat={}{0:C}}"
                                                        CellStyle="{StaticResource CellLeftAlign}" />
                                    <DataGridTextColumn Header="Amount To Fix"
                                                        Binding="{Binding AmountToFix, StringFormat={}{0:C}}"
                                                        CellStyle="{StaticResource CellRightAlign}" />
                                    <DataGridTextColumn Header="Assistant &lt; Instructor"
                                                        Binding="{Binding AssistantLessThanInstructor}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                    <DataGridTextColumn Header="Associate &lt; Instructor"
                                                        Binding="{Binding AssociateLessThanInstructor}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                    <DataGridTextColumn Header="Associate &lt; Assistant"
                                                        Binding="{Binding AssociateLessThanAssistant}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                    <DataGridTextColumn Header="Full &lt; Instructor"
                                                        Binding="{Binding FullLessThanInstructor}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                    <DataGridTextColumn Header="Full &lt; Assistant"
                                                        Binding="{Binding FullLessThanAssistant}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                    <DataGridTextColumn Header="Full &lt; Associate"
                                                        Binding="{Binding FullLessThanAssociate}"
                                                        CellStyle="{StaticResource CellCenterAlign}" />
                                </DataGrid.Columns>
                                <DataGrid.RowDetailsTemplate>
                                    <DataTemplate>
                                        <DataGrid x:Name="DataGridEmployees"
                                                  ItemsSource="{Binding Employees}"
                                                  AlternatingRowBackground="LightGray"
                                                  AlternationCount="1"
                                                  IsReadOnly="True"
                                                  Visibility="Visible"
                                                  Margin="20,2,0,0"
                                                  RowDetailsVisibilityMode="Collapsed"
                                                  AutoGenerateColumns="True"
                                                  MouseWheel="HandleMouseWheel">
                                        </DataGrid>
                                    </DataTemplate>
                                </DataGrid.RowDetailsTemplate>
                            </DataGrid>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}"
                                         Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.HighlightTextBrushKey}"
                                         Color="Black" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}"
                                         Color="Transparent" />
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightTextBrushKey}"
                                         Color="Black" />
                    </DataGrid.Resources>
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
